<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Language Detection and Translation!" />
    <EditText
        android:id="@+id/searchTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:singleLine="true"
        android:textColor="#000" />
    <Button
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView android:layout_width="fill_parent"
        android:id="@+id/detectedLangView"
        android:layout_height="wrap_content"
        />
    <Spinner
        android:id="@+id/lang_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[Select a Lang...]"/>
    <Button
        android:text="Translate"
        android:id="@+id/translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView android:layout_width="fill_parent"
        android:id="@+id/translatedTextView"
        android:layout_height="wrap_content"
        />
    <TextView android:layout_width="fill_parent"
        android:id="@+id/errorInput"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />
    <TextView android:layout_width="fill_parent"
        android:id="@+id/errorNetwork"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Network failure!!"
        />
</LinearLayout>
